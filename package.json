{
  "name": "jewelry-api",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev:serve": "nodemon --quiet --exec \"tsx src/server/index.ts | pino-pretty\"",
    "dev:typecheck": "tsc --noEmit --watch --preserveWatchOutput",
    "dev": "npm-run-all --parallel dev:serve dev:typecheck",
    "generate-db-types": "kysely-codegen --dialect postgres --out-file ./src/db/types.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@auth/express": "^0.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/passport": "^1.0.17",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jose": "^6.0.10",
    "kysely": "^0.27.6",
    "passport": "^0.7.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.13",
    "@types/pino-http": "^5.8.4",
    "kysely-codegen": "^0.18.3",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
