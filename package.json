{
  "name": "jewelry-api",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": "18.x",
    "npm": ">=9"
  },
  "scripts": {
    "dev:serve": "tsx watch --clear-screen=false -r dotenv/config src/server/index.ts | pino-pretty",
    "dev:typecheck": "npx tsc-watch --noClear --noEmit --preserveWatchOutput",
    "dev": "concurrently -n serve,typecheck -c green,blue \"pnpm dev:serve\" \"pnpm dev:typecheck\"",
    "seed": "tsx src/db/seed.ts | pino-pretty",
    "build": "tsc",
    "start": "node -r dotenv/config dist/server/index.js",
    "generate:db-types": "kysely-codegen --dialect postgres --out-file ./src/database/types.ts",
    "generate:api": "pnpm dlx openapi-typescript ./docs/openapi.yaml --output ./src/dtos/temp-generated/temp-openapi.d.ts",
    "generate:api-zod": "pnpm flx openapi-zod-client './docs/openapi.yaml' -o './src/api/zod.ts'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/express": "^0.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/passport": "^1.0.17",
    "bcrypt": "^5.1.1",
    "camelcase-keys": "^9.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jose": "^6.0.11",
    "kysely": "^0.27.6",
    "passport": "^0.7.0",
    "pg": "^8.15.6",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.17",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.15.1",
    "@types/pino-http": "^5.8.4",
    "concurrently": "^9.1.2",
    "kysely-codegen": "^0.18.5",
    "nodemon": "^3.1.10",
    "openapi-zod-client": "^1.18.3",
    "pino-pretty": "^13.0.0",
    "tsc-watch": "^6.2.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "husky": "^8.0.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}